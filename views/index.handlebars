<main>
  <h1>BURGERS!!</h1>
  <img
    src="public/burger.jpg"
    alt="burger">

  <div class="row">
    <div class="ready">
      <h2>Ready to eat!! </h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>


    <div class="finish">
      <h2>Devoured!!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>

    </div>
  </div>


  <div class="add">
    <h2>Add Burger</h2>

    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button type="submit">Add burger</button>
    </form>
  </div>
</main>